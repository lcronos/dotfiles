# exit i3 (logs you out of your X session)
#bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
#bindsym $mod+Shift+e exec [$(echo -e 'No\nYes' | dmenu -sb '#ff6600' -i -p "You pressed the exit shortcut.  Do you really want to exit i3?") = "Quit"] && i3-msg exit
bindsym $mod+Shift+e exec i3power logout

bindsym Control+Mod1+l exec i3power lock

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

mode "Application Launcher"
{
        bindsym Shift+q exec QT_QPA_PLATFORMTHEME=KDE qupzilla; mode "default"
	bindsym q exec QT_QPA_PLATFORMTHEME=KDE qutebrowser; mode "default"
	bindsym d exec QT_QPA_PLATFORMTHEME=KDE dolphin; mode "default"
	bindsym f exec firefox-bin; mode "default"
	bindsym v exec QT_QPA_PLATFORMTHEME=KDE qvim; mode "default"
        bindsym Shift+v exec VirtualBox; mode "default"
	bindsym e exec emacs; mode "default"
	bindsym k exec QT_QPA_PLATFORMTHEME=KDE kate; mode "default"
	bindsym Shift+k exec QT_QPA_PLATFORMTHEME=KDE konsole; mode "default"
	bindsym g exec google-play-music-desktop-player; mode "default"
        bindsym a exec QT_QPA_PLATFORMTHEME=KDE aqemu; mode "default"
	bindsym o exec QT_QPA_PLATFORMTHEME=KDE okular; mode "default"

	bindsym Escape mode "default"
	bindsym Control+[ mode "default"
}
	bindsym $mod+Shift+a mode "Application Launcher"

mode "Power Management"
{
	bindsym p exec i3power shutdown; mode "default"
	bindsym r exec i3power reboot; mode "default"
	bindsym s exec i3power suspend; mode "default"
	bindsym h exec i3power hibernate; mode "default"

	bindsym Escape mode "default"
	bindsym Control+[ mode "default"
}
	bindsym $mod+Shift+p mode "Power Management"

# Volume Control
bindsym XF86AudioLowerVolume exec amixer set Master -q 5%-
bindsym XF86AudioRaiseVolume exec amixer set Master -q 5%+
bindsym XF86AudioMute exec amixer -D pulse set Master 1+ toggle

# Brightness Control
bindsym XF86MonBrightnessDown exec xbacklight -dec 20
bindsym XF86MonBrightnessUp exec xbacklight -inc 20

# Media Player Controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrevious exec playerctl previous

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
	colors {
			statusline	$white
			background	$black

        # Colors		border		backgr		text
	focused_workspace	$gray 		$gray		$black
        active_workspace	$dark	 	$dark	 	$gray
        inactive_workspace	$dark 		$dark		$gray
        urgent_workspace  	$orange		$orange		$dark
    }
    position top

}

